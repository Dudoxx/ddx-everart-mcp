{
  "name": "@dudoxx/everart-mcp",
  "version": "1.0.4",
  "description": "Advanced EverArt MCP server with img2img, custom model training, and full API capabilities - Refactored and enhanced by Dudoxx UG",
  "type": "module",
  "main": "build/index.js",
  "bin": {
    "ddx-everart-mcp": "build/index.js"
  },
  "scripts": {
    "dev": "tsc --watch",
    "build": "NODE_ENV=production pnpm run lint && node scripts/version-manager.mjs build-increment && tsc && chmod +x build/index.js",
    "build:prod": "NODE_ENV=production pnpm run lint && node scripts/version-manager.mjs build-increment && tsc && chmod +x build/index.js",
    "start": "node build/index.js",
    "lint": "pnpm exec eslint src/**/*.ts",
    "lint:fix": "pnpm exec eslint src/**/*.ts --fix",
    "type-check": "pnpm exec tsc --noEmit",
    "check": "pnpm run lint && pnpm run type-check",
    "test": "pnpm exec jest",
    "test:watch": "pnpm exec jest --watch",
    "test:coverage": "pnpm exec jest --coverage",
    "version": "node scripts/version-manager.mjs show",
    "version:patch": "node scripts/version-manager.mjs increment patch",
    "version:minor": "node scripts/version-manager.mjs increment minor",
    "version:major": "node scripts/version-manager.mjs increment major",
    "version:bump": "node scripts/version-bump.mjs",
    "changelog:update": "node scripts/update-changelog.mjs",
    "changelog:preview": "node scripts/update-changelog.mjs --dry-run",
    "changelog:since": "node scripts/update-changelog.mjs --since",
    "release": "pnpm run version:bump && pnpm run changelog:update",
    "release:preview": "pnpm run version:bump && pnpm run changelog:preview",
    "postbuild": "node scripts/version-manager.mjs show",
    "prepare": "husky"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "everart",
    "ai",
    "image-generation",
    "flux",
    "stable-diffusion",
    "img2img",
